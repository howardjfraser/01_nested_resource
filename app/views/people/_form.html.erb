<%= form_for @person do |f| %>

  <%= render partial: 'shared/base_errors', locals: { object: @person } %>

  <%= label_or_error f, :name %>
  <%= f.text_field :name, class: '', autofocus: true %>

  <%= label_or_error f, :job_title %>
  <%= f.text_field :job_title, class: '' %>

  <%= label_or_error f, :bio %>
  <%= f.text_area :bio, class: 'm-b-2', rows: '3' %>

  <%= f.button 'Save' %>
  <%= link_to 'Cancel', @person, class: 'btn btn-secondary' %>

<% end %>
