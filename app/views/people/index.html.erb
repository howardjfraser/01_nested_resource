<% provide :button, link_to("New <span class='hidden-xs-down'>Person</span>".html_safe, new_person_path, class: 'btn btn-success pull-xs-right') %>
<% provide :nav, "#{link_to 'Derailed 00', root_path}".html_safe %>
<% provide :title, 'People' %>

<div id="people">

  <input type="text" class="search" placeholder="Filter&hellip;" autofocus="true" />

  <ul class="list list-unstyled">
    <% @people.each do |p| %>
      <li class="p-r-1 p-b-q">
        <span class="name nowrap">
          <%= link_to "#{p.name}", p %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
